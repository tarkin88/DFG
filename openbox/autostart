#!/usr/bin/sh\
media="$(dir /dev/disk/by-label)"
#EXECs
xrdb .Xresources &
dunst &
(sleep 1s && tint2) &
(sleep 1s && pulseaudio --start) &
(sleep 1s && nitrogen --restore) &
(sleep 1s && compton --config ~/.config/compton/compton.conf) &
(sleep 2s && mpd ~/.mpd/config) &
(sleep 3s && devmon --sync --exec-on-drive "notify-send 'Automount' 'New media detect: $media.'" --exec-on-remove "notify-send 'Automount' '$media has removed.'") &
(sleep 5s && clipit) &
(sleep 5s && nm-applet) &
