#!/usr/bin/sh\

#EXECs
xrdb .Xresources &
dunst &
(sleep 1s && pulseaudio --start) &
(sleep 1s && nitrogen --restore) &
(sleep 1s && xfce4-panel) &
(sleep 1s && compton --config ~/.config/compton/compton.conf) &
(sleep 3s && devmon --sync --exec-on-drive "notify-send 'Automount' 'Media is now mounted at /run/media.'" --exec-on-remove "notify-send 'Automount' 'Media has been removed.'") &
(sleep 4s && mpd ~/.mpd/config) &
(sleep 5s && mpc update) &
(sleep 5s && clipit) &
(sleep 5s && nm-applet) &